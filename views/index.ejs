<html>
    <header>
        <title><%= title %></title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" crossorigin="anonymous">
        <link rel="stylesheet"  href="/css/style.css" >
        
     </header>
    <body>
        
        <div id="contact-container">
            <div class="heading">
                <h1><i class="fas fa-address-book"></i> Contacts list</h1>
            </div>
            <% for(let i of contact_list){ %>
            <div class="contact-text">
                <div class="contact-name">
                    <h3><%= i.name %></h3>
                </div>
                <div class="contact-phone">
                        <h3><%= i.phone %></h3>
                </div>
                <div class="contact-delete">
                       <a href="/delete-contact/?id=<%= i._id %>"><h3><i class="fas fa-trash-alt"></i></h3></a> 
                </div>
            </div>
            <%  }%>
        </div>
       
        <div id="contact-form">
            <form action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="text" name="phone" placeholder="Phone" required>
            <button type="submit">Add</button>
            </form>
            
        </div>
    </body>
</html>